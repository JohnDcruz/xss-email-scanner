{
    "manifest_version": 3,
    "name": "XSS Email Scanner",
    "version": "1.0",
    "description": "Scan your emails for potential XSS threats.",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/email.png",
        "48": "assets/email.png",
        "128": "assets/email.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  